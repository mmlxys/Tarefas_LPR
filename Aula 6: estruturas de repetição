#include <iostream>

using namespace std;

int main() {
    
    int quantidade,numero, soma = 0, contador = 0;
    
    cout << "Digite a quantidade de números: " ;
    cin >> quantidade;
    
    while (quantidade > 0){
        
        cout << "Digite um numero: ";
        cin >> numero;
        
        if (numero % 2 == 0 ) {
            
        soma += numero;
        contador ++; 
        }
        
        quantidade--;
    }
    
    if (contador == 0) {
        cout << "Você não digitou numeros pares, tente novamente" << endl;
    }
    else {
        
        double media = soma/contador;
        cout << "A média dos numeros pares é: " << media << endl; 
    }
}


//                              ///                           //

#include <iostream>
#include <random>

using namespace std;

int main() {

    random_device numAleatorio;
    uniform_int_distribution<> distribuicao(1, 100);
    int valorInteiro = distribuicao(numAleatorio);

    int chute, tentativas = 0;

    do {
        
        cout << "Chute um número entre 1 e 100: ";
        cin >> chute;
        
        
        if (chute > valorInteiro) {
            cout << "Tá alto!" << endl;
        } else if (chute < valorInteiro) {
            cout << "Tá baixo!" << endl;
        } else {
            cout << "Acertou!" << endl;
        }
        
        
        tentativas++;
        
    } while (chute != valorInteiro); 
    
    cout << "Você acertou depois de " << tentativas << " tentativas!" << endl;

    
}

//                              ///                     //

using System;

class Program
{
    static void Main()
    {
        int soma = 0;

        for (int i = 50; i <= 500; i++)
        {
            if (i % 2 != 0 && i % 3 == 0)
            {
                soma += i;
            }
        }

        Console.WriteLine("A soma dos números ímpares múltiplos de 3 de 50 a 500 é: " + soma);
    }
}
//                               ///                      //


using System;

class exericio4
{
    static void Main()
    {
        Console.WriteLine("Digite um número:");
        int numero = Convert.ToInt32(Console.ReadLine());
        
        int quadrado = numero * numero;
        int somaDigitos = 0;

        while (quadrado != 0)
        {
            int digito = quadrado % 10; // o que ele está fazendo aqui é pegar o último digito dividindo por 10, porquê  se temos 123 % 10, o resultado é 3, porque 123 dividido por 10 é 12 com um resto de 3.
            somaDigitos += digito;
            quadrado /= 10;
        }

        Console.WriteLine("A soma dos dígitos do quadrado do número é: " + somaDigitos);
    }
}

